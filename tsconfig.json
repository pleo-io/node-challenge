{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": false,
    "checkJs": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "experimentalDecorators": true,
    "types": [
      "jest",
      "node"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "index.js",
    "types.d.ts",
    "packages/**/*.ts",
    "test/**/*.ts"
  ]
}
